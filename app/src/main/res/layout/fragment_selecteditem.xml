<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedItemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/selectedItem"
            android:layout_width="259dp"
            android:layout_height="170dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/selectedSpecies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:id="@+id/selectedSpecies"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="106dp"
            android:text="selectedSpecies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedItem" />


        <TextView
            android:id="@+id/selectedPlace"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="106dp"
            android:text="selectedPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedSpecies" />

        <TextView
            android:id="@+id/selectedDate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="106dp"
            android:text="selectedDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedPlace" />

        <TextView
            android:id="@+id/userComment"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="179dp"
            android:text="userComment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedDate" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>